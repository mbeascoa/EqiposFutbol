<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEquipo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#D8D4D4"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llov_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingTop="8dp"
                android:paddingRight="6dp">

                <TextView
                    android:id="@+id/tv_mcityTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:text="mcityTeam"
                    android:textColor="@color/Rojo_orgullo_gay"
                    android:textSize="12sp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/img_Estadio"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llov_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_mnameTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="mnameTeam"
                    android:textColor="@color/Rojo_orgullo_gay"
                    android:textSize="10sp"
                    android:typeface="sans"
                    app:autoSizeTextType="none" />

                <ImageView
                    android:id="@+id/iv_Equipo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    app:srcCompat="@drawable/alaves_team" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llov_3"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/img_Logo"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:srcCompat="@drawable/alaves" />

                <TextView
                    android:id="@+id/tv_mliga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="mliga"
                    android:textColor="@color/Rojo_orgullo_gay"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Puesto"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:paddingLeft="18dp"
                        android:text="Puesto: "
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_mranking"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="mranking"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ano"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:alpha="0.8"
                        android:paddingLeft="32dp"
                        android:text="AÃ±o:"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_mantiguedad"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="mantiguedad"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>